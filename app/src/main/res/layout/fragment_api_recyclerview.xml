    <data>
        <variable
            name="viewModel"
            type="com.huhx0015.gw2at.viewmodels.fragments.ApiFragmentViewModel" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

